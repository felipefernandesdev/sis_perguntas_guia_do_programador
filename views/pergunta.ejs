<%- include ("partials/header.ejs");%>
<body>
    <%- include ("partials/navbar.ejs");%>
    
    <div class="container">
        <hr>
        <h2><%= pergunta.titulo%></h2>
        <p><%= pergunta.descricao%></p>
        <hr>
        <form method="POST" action="/enviar">
            <h4>Responda aqui:</h4>
            <label>Resposta</label>
            <textarea name="corpo" placeholder="coloque sua resposta aqui!" class="form-control"></textarea>
            <br>
            <input type="hidden" name="pergunta" value="<%= pergunta.id%>">
            <button type="submit" class="btn btn-dark">Responder</button>
        </form>
        <hr>
        <h3>Respostas</h3>
        <hr>
        <% respostas.forEach(resposta =>{ %>
            <div class="card">       
        
                <div class="card-body">
                    
                        <%= resposta.corpo%>
                
                </div> 
                
            </div>
            <br>
        <% }); %>      
    </div>

    
</body>
<%- include ("partials/footer.ejs");%>